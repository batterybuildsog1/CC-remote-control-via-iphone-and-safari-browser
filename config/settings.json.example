{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/telegram-hook.sh"
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(jq:*)",
      "Bash(xargs:*)",
      "Bash(which:*)",
      "Bash(rm:*)",
      "Bash(kill:*)",
      "Bash(pkill:*)",
      "Bash(pgrep:*)",
      "Bash(launchctl:*)",
      "Bash(tmux:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(printf:*)",
      "Bash(wait)",
      "Bash(sleep:*)",
      "Bash(lsof:*)",
      "WebFetch",
      "WebSearch",
      "Task",
      "TodoWrite"
    ],
    "ask": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(sudo:*)",
      "Bash(kill -9:*)"
    ],
    "deny": []
  }
}
